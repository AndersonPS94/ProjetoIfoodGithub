<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">


        <ImageView
            android:id="@+id/btnVoltar"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/f2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirmação de pedido"
            android:textStyle="bold"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@id/btnVoltar"
            app:layout_constraintTop_toTopOf="@id/btnVoltar"
            android:layout_marginStart="8dp" />


        <TextView
            android:id="@+id/txtItemTitulo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Itens adicionados"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/btnVoltar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp" />

        <TextView
            android:id="@+id/txtItemDescricao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Big Five\nOs cinco aperitivos mais pedidos da casa\nR$ 89,90"
            app:layout_constraintTop_toBottomOf="@id/txtItemTitulo"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" />

        <ImageView
            android:id="@+id/imgItem"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/f1"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/txtItemDescricao" />


        <TextView
            android:id="@+id/txtEnderecoTitulo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Entregar no endereço"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/imgItem"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp" />

        <TextView
            android:id="@+id/txtEndereco"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Avenida Paulista, 1034, Sumaré"
            app:layout_constraintTop_toBottomOf="@id/txtEnderecoTitulo"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="4dp" />


        <TextView
            android:id="@+id/txtPagamento"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Pagamento"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/txtEndereco"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp" />


        <TextView
            android:id="@+id/txtCartao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:padding="8dp"
            android:text="Cartão de crédito"
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtPagamento" />


        <Button
            android:id="@+id/btnAdicionarPagamento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adicionar"
            android:textColor="@android:color/white"
            android:backgroundTint="#F00404"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/txtCartao"
            android:layout_marginTop="4dp" />


        <TextView
            android:id="@+id/txtResumo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Resumo dos valores\nSubtotal: R$ 100,00\nTaxa de entrega: R$ 6,90\nTotal: R$ 106,90"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/btnAdicionarPagamento"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp" />


        <Button
            android:id="@+id/btnConfirmar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Confirmar Pedido"
            android:textColor="@android:color/white"
            android:backgroundTint="#FA0C0C"
            app:layout_constraintTop_toBottomOf="@id/txtResumo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
